  // if (ro >= nr) ro=nr_1 ;

  //if (co < 0) co=1 ;
  //if (co >= nc) co = nc_1; 

  ix = ro + (co * nr); 
  ip = ro + (co * nr) + jn * nrc ;
  
  NumericVector P = RE(p, X[ix], ix);

    List out; 
    out["cr"] = cr ; 
    out["cc"] = cc ; 
    out["jn"] = jn ; 
    out["ro"] = ro  ;
    out["co"] = co  ;
    out["ix"] = ix  ;
    out["ip"] = ip  ;
    out["P"] = P  ;
    
